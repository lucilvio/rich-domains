@model Lucilvio.TicketMe.AnemicModel.Domain.Ticket.Ticket
@{
    Layout = "_Layout";
    ViewData["Title"] = "Tickets Details";
}

<div class="row mb-4">
    <div class="col-lg-12">
        <h1 class="display-4"> Tickets </h1>
        <p class="text-uppercase small text-muted"> <a class="font-weight-bold" href="@Url.Action("Tickets", "Tickets")">Home</a> / Ticket Details / <span class="font-weight-bold"> @Model.Title </span></p>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <img src="~/img/ticket.png" />
    </div>
    <div class="col-lg-3">
        <p class="font-weight-bold"> @Model.Title </p>
        <p> @Model.Description <br/> <small class="text-muted"> Expires in @Model.ExpirationDate.ToShortDateString() </small></p>
        
        <h4 class="font-weight-bold"> @Model.Price Point(s) </h4>

        @if(User.Identity.IsAuthenticated)
        {
            <form action="@Url.Action("Buy")" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <button class="btn btn-primary" type="submit"> Buy </button>
            </form>
        }
    </div>
</div>