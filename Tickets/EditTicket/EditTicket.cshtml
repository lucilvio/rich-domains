@model Lucilvio.TicketMe.AnemicModel.Domain.Ticket.Ticket
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Ticket";
}

<div class="row mb-5">
    <div class="col-lg-12">
        <h1 class="display-4"> Edit Ticket </h1>
        <p class="text-uppercase small"> <a class="font-weight-bold" href="@Url.Action("Tickets", "Tickets")">Home</a> / Manage Tickets /  Edit Ticket / <span class="font-weight-bold"> @Model.Title </span></p>
    </div>
</div>

<form action="@Url.Action("EditTicket")" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="hidden" name="state" value="@Model.State" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label class="label"> Title </label>
                <input type="text" name="title" class="form-control" value="@Model.Title" required />
            </div>
            <div class="form-group">
                <label class="label"> Description </label>
                <textarea class="form-control" name="description" rows="5" required> @Model.Description </textarea>
            </div>
            <div class="form-group">
                <label class="label"> Price </label>
                <input type="number" name="price" class="form-control" value="@Model.Price" required />
            </div>
        </div>
    </div>

    <div class="row float-right">
        <div class="col-lg-12">
            <button type="submit" class="btn btn-primary"> Edit Ticket </button>
        </div>
    </div>
</form>