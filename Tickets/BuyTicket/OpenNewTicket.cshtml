
@{
    Layout = "_Layout";
    ViewData["Title"] = "Open New Ticket";
}

<div class="row mb-5">
    <div class="col-lg-12">
        <h1 class="display-4"> Open New Ticket </h1>
        <p class="text-uppercase small"> <a class="font-weight-bold" href="@Url.Action("Tickets", "Tickets")">Home</a> / Manage Tickets / <span class="font-weight-bold"> Open New Ticket </span></p>
    </div>
</div>

<form action="@Url.Action("OpenNewTicket")" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label class="label"> Title </label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label class="label"> Description </label>
                <textarea class="form-control" rows="5"></textarea>
            </div>
        </div>
    </div>

    <div class="row float-right">
        <div class="col-lg-12">
            <button type="submit" class="btn btn-primary"> Open Ticket </button>
        </div>
    </div>
</form>